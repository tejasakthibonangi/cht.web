<style type="text/css">
    .sidebar {
        position: fixed;
        top: 0;
        right: -60%; /* Initially hidden */
        width: 60%; /* Set the width to 60% */
        height: 100%;
        background-color: white;
        transition: right 0.4s ease;
        box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
        z-index: 1050;
        display: flex;
        flex-direction: column;
    }

        .sidebar.show {
            right: 0; /* When shown, set right to 0 */
        }

</style>
